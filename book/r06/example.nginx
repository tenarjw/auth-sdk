server {
    listen 443 ssl;
    server_name example.com;
    
    # Certyfikaty
    ssl_certificate /etc/ssl/certs/chained.pem;
    ssl_certificate_key /etc/ssl/private/example.com.key;
    
    # Protokoły (wyłącz starsze protokoły TLSv1, TLSv1.1 ze względu na luki)
    ssl_protocols TLSv1.2 TLSv1.3;
    
    # Szyfry (zalecane ustawienia, np. z Mozilla SSL Configuration Generator)
    ssl_ciphers 'ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256';
    ssl_prefer_server_ciphers on;
    
    # Parametry DH (dla TLS 1.2, w TLS 1.3 preferowany ECDHE)
    ssl_dhparam /etc/ssl/certs/dhparams.pem;
    
    # Optymalizacja wydajności
    ssl_session_timeout 1d;
    ssl_session_cache shared:MozSSL:10m;
    ssl_session_tickets off;
    
    # HSTS
    add_header Strict-Transport-Security "max-age=63072000" always;
}
